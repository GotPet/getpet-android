<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>


        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme" />

    <style name="AppTheme.Auth" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewBody">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
