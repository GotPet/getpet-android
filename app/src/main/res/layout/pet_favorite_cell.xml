<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_margin="4dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pet_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/doggie_lui_peng_unsplash"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pet_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="16dp"
            tools:text = "Doggis"
            android:textColor="@color/colorTextLighter"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@id/pet_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text = "Mėgstu gražius ir skanius pyragėlius labai fainai:D"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
</RelativeLayout>
