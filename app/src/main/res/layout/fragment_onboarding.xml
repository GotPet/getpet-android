<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="lt.getpet.getpet.OnboardingActivity">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerInside"
        tools:src="@drawable/onboarding_two" />

    <TextView
        android:id="@+id/onboarding_text_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Labas!"
        android:layout_below="@id/onboarding_image"/>

    <TextView
        android:id="@+id/onboarding_text_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="nuslink patikusio gyvūno\nnuotrauką dešinėn - taip pridėsi\nją į mėgiamiausių sąrašą."
        android:layout_below="@id/onboarding_text_heading"/>
</RelativeLayout>